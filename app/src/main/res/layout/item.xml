<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <ImageView
            android:id="@+id/post_IMG_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:contentDescription="Post Image" />

        <TextView
            android:id="@+id/post_LBL_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Place Name"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/post_BTN_show_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="מפה"
            android:textSize="12sp"
            android:layout_marginTop="4dp"
            android:backgroundTint="@color/primaryColor"
            android:textColor="@android:color/white"
            android:layout_gravity="start"/>

        <!-- כאן הוספנו את המפה -->
        <com.google.android.gms.maps.MapView
            android:id="@+id/post_MAP_view"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/post_LBL_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/post_LBL_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="2dp" />

        <!-- שורת כפתורי לייק + עריכה -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/post_IMG_like"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_heart_outline"
                android:contentDescription="Like"
                android:layout_gravity="start" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/post_BTN_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ערוך"
                android:layout_gravity="end" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
