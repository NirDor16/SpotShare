<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/backgroundGray">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="הוסף המלצה חדשה"
                android:textSize="22sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/textDark"
                android:layout_marginBottom="16dp" />

            <EditText
                android:id="@+id/add_ET_place"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="שם המקום"
                android:backgroundTint="@color/primaryColor"
                android:padding="12dp"
                android:layout_marginBottom="12dp" />

            <EditText
                android:id="@+id/add_ET_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="תיאור"
                android:backgroundTint="@color/primaryColor"
                android:padding="12dp"
                android:layout_marginBottom="12dp" />

            <Spinner
                android:id="@+id/spinnerCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp" />
            <ImageView
                android:id="@+id/add_image_preview"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="12dp"
                android:scaleType="fitCenter"
                android:src="@drawable/image"
                android:background="@android:color/darker_gray"
                android:contentDescription="תמונה שנבחרה" />


            <com.google.android.material.button.MaterialButton
                android:id="@+id/add_image_select"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="בחר תמונה"
                android:icon="@drawable/baseline_add_a_photo_24"
                app:iconPadding="8dp"
                app:cornerRadius="12dp"
                android:backgroundTint="@color/accentColor"
                android:textColor="@android:color/white"
                android:layout_marginBottom="24dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/add_BTN_save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="שמור"
                android:icon="@drawable/baseline_check_24"
                app:iconPadding="8dp"
                app:cornerRadius="12dp"
                android:backgroundTint="@color/primaryColor"
                android:textColor="@android:color/white"
                android:layout_marginBottom="32dp" />
        </LinearLayout>
    </ScrollView>

    <!-- תפריט תחתון קבוע -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:menu="@menu/menu_bottom_navigation"
        app:itemIconTint="@color/primaryColor"
        app:itemTextColor="@color/primaryColor" />
</LinearLayout>
